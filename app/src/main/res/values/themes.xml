<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="Base.Doodle" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="android:colorPrimaryDark">?android:attr/colorBackground</item>
    <item name="android:navigationBarColor">?android:attr/colorBackground</item>

    <item name="snackbarTextViewStyle">@style/Widget.Doodle.Snackbar.TextView</item>
    <item name="snackbarButtonStyle">@style/Widget.Doodle.Button.TextButton.Snackbar</item>

    <item name="android:colorControlNormal">?attr/colorOnBackground</item>
    <item name="android:colorControlActivated">?attr/colorSecondary</item>
    <item name="android:colorControlHighlight">@color/highlight</item>
    <item name="android:colorEdgeEffect">@color/highlight</item>

    <item name="actionOverflowButtonStyle">@style/Widget.Doodle.OverFlow</item>
    <item name="actionOverflowMenuStyle">@style/Widget.Doodle.PopupMenu</item>

    <item name="android:fontFamily">@font/jost_book</item>

    <item name="bottomSheetDialogTheme">@style/Theme.Doodle.BottomSheetDialog</item>

    <item name="android:windowSplashScreenBackground" tools:targetApi="s">?android:attr/colorBackground</item>
    <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/splash_logo_anim</item>
    <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1050</item>
  </style>

  <style name="Theme.Doodle" parent="Base.Doodle">
    <item name="android:colorBackground">@color/neutral_99</item>
    <item name="colorOnBackground">@color/neutral_10</item>

    <item name="colorPrimary">@color/retro_green_40</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="colorPrimaryContainer">@color/retro_green_90</item>
    <item name="colorOnPrimaryContainer">@color/retro_green_10</item>
    <item name="colorPrimaryInverse">@color/retro_green_80</item>

    <item name="colorSurface">@color/neutral_99</item>
    <item name="colorOnSurface">@color/neutral_10</item>
    <item name="colorSurfaceVariant">@color/neutral_90</item>
    <item name="colorOnSurfaceVariant">@color/neutral_30</item>
    <item name="colorSurfaceInverse">@color/neutral_20</item>
    <item name="colorOnSurfaceInverse">@color/neutral_50</item>

    <item name="colorSecondary">@color/retro_green_40</item>
    <item name="colorOnSecondary">@color/white</item>
    <item name="colorSecondaryContainer">@color/retro_green_90</item>
    <item name="colorOnSecondaryContainer">@color/retro_green_10</item>

    <item name="colorTertiary">@color/retro_dirt_40</item>
    <item name="colorOnTertiary">@color/white</item>
    <item name="colorTertiaryContainer">@color/retro_dirt_80</item>
    <item name="colorOnTertiaryContainer">@color/retro_dark</item>

    <item name="colorError">@color/retro_red_40</item>
    <item name="colorOnError">@color/white</item>
    <item name="colorErrorContainer">@color/retro_red_90</item>
    <item name="colorOnErrorContainer">@color/retro_red_10</item>

    <item name="colorOutline">@color/neutral_50</item>
  </style>

  <style
    name="Theme.Doodle.BottomSheetDialog"
    parent="ThemeOverlay.Material3.BottomSheetDialog">
    <item name="enableEdgeToEdge">true</item>
    <item name="android:navigationBarColor">@color/transparent</item>
  </style>

</resources>
