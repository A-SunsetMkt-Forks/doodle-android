<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Divider -->
    <style name="Theme.Doodle.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/stroke</item>
    </style>

    <!-- Buttons -->
    <style name="Theme.Doodle.Button.UnelevatedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="rippleColor">@color/highlight_on_secondary</item>
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/on_secondary</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <!-- Category -->
    <style name="Theme.Doodle.Category" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">72dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Doodle.Category</item>
    </style>

    <!-- List -->
    <style name="Theme.Doodle.ListItem" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Theme.Doodle.ListItem.Clickable" parent="Theme.Doodle.ListItem">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_list_item_ripple</item>
    </style>

    <style name="Theme.Doodle.ListItem.SingleLine" parent="Theme.Doodle.ListItem">
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="Theme.Doodle.ListItem.SingleLine.Clickable" parent="Theme.Doodle.ListItem.SingleLine">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_list_item_ripple</item>
    </style>

    <style name="Theme.Doodle.ListItem.TwoLine" parent="Theme.Doodle.ListItem">
        <item name="android:minHeight">72dp</item>
    </style>

    <style name="Theme.Doodle.ListItem.TwoLine.Clickable" parent="Theme.Doodle.ListItem.TwoLine">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_list_item_ripple</item>
    </style>

    <style name="Theme.Doodle.ListItem.TextBox" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Theme.Doodle.ListItem.TextBox.Stretch" parent="Theme.Doodle.ListItem.TextBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Theme.Doodle.ListItem.Title" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Doodle.ListItem.Title</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Theme.Doodle.ListItem.Description" parent="Theme.Doodle.ListItem.Title">
        <item name="android:textAppearance">@style/TextAppearance.Doodle.ListItem.Description</item>
        <item name="android:maxLines">10</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <!-- Icon -->
    <style name="Theme.Doodle.ListItem.Icon" parent="">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <!-- RADIO BUTTON -->
    <style name="Widget.Doodle.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <!-- CARD -->
    <style name="Widget.Doodle.Card" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">@dimen/theme_selection_card_size</item>
        <item name="android:layout_height">@dimen/theme_selection_card_size</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:checkable">true</item>
        <item name="checkedIcon">@null</item>
        <item name="elevation">0dp</item>
        <item name="android:gravity">center</item>
        <item name="strokeColor">@color/stroke</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/highlight</item>
        <item name="cardBackgroundColor">@color/background</item>
        <item name="cardCornerRadius">@dimen/theme_selection_card_corner_radius</item>
    </style>

    <style name="Widget.Doodle.Card.Circle" parent="Widget.Doodle.Card">
        <item name="android:layout_width">@dimen/theme_selection_circle_size</item>
        <item name="android:layout_height">@dimen/theme_selection_circle_size</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:checkable">false</item>
        <item name="cardCornerRadius">@dimen/theme_selection_circle_corner_radius</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- TEXT APPEARANCES -->

    <style name="TextAppearance.Doodle.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextAppearance.Doodle.Body2" parent="TextAppearance.Doodle.Body1">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.Doodle.Title" parent="TextAppearance.Doodle.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Doodle.Toolbar" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextAppearance.Doodle.Category" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextAppearance.Doodle.ListItem.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextAppearance.Doodle.ListItem.Description" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/onBackgroundSecondary</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextAppearance.Doodle.BottomSheet.Title" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextAppearance.Doodle.BottomSheet.Text" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextAppearance.Doodle.BottomSheet.Text.Small" parent="TextAppearance.Doodle.BottomSheet.Text">
        <item name="android:textSize">13sp</item>
    </style>

