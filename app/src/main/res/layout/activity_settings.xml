<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">

        <LinearLayout
            android:id="@+id/linear_app_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/background">

            <FrameLayout
                android:id="@+id/frame_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="20dp"
                android:background="?attr/actionBarItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:contentDescription="@string/action_back"
                android:tooltipText="@string/action_back"
                android:focusable="true"
                tools:targetApi="o">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_round_arrow_back" />

            </FrameLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.Doodle.Toolbar" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_set"
                style="@style/Theme.Doodle.Button.UnelevatedButton"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_set"/>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_help"
                style="@style/Theme.Doodle.ListItem.TwoLine">

                <ImageView
                    android:id="@+id/image_help"
                    style="@style/Theme.Doodle.ListItem.Icon"
                    android:src="@drawable/ic_round_help_anim"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    style="@style/Theme.Doodle.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Doodle.ListItem.Title"
                        android:text="@string/info_description"
                        android:textSize="15sp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/Theme.Doodle.Category"
                android:text="@string/category_customisation" />

            <LinearLayout
                style="@style/Theme.Doodle.ListItem.TwoLine"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:clipToPadding="false">

                <ImageView
                    android:id="@+id/image_theme"
                    style="@style/Theme.Doodle.ListItem.Icon"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/ic_round_palette_anim"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    style="@style/Theme.Doodle.ListItem.TextBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="7dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:clipToPadding="false"
                    tools:ignore="UnusedAttribute,ContentDescription">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_doodle"
                        style="@style/Widget.Doodle.Card"
                        android:layout_marginEnd="4dp">

                        <com.google.android.material.card.MaterialCardView
                            style="@style/Widget.Doodle.Card.Circle">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/preview_doodle" />

                        </com.google.android.material.card.MaterialCardView>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_neon"
                        style="@style/Widget.Doodle.Card"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp">

                        <com.google.android.material.card.MaterialCardView
                            style="@style/Widget.Doodle.Card.Circle">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/preview_neon" />

                        </com.google.android.material.card.MaterialCardView>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_geometric"
                        style="@style/Widget.Doodle.Card"
                        android:layout_marginStart="4dp">

                        <com.google.android.material.card.MaterialCardView
                            style="@style/Widget.Doodle.Card.Circle">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/preview_geometric"/>

                        </com.google.android.material.card.MaterialCardView>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/Theme.Doodle.ListItem.TwoLine"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:clipToPadding="false">

                <ImageView
                    android:id="@+id/image_variant"
                    style="@style/Theme.Doodle.ListItem.Icon"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/ic_round_tonality"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/linear_variant"
                    style="@style/Theme.Doodle.ListItem.TextBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="7dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:clipToPadding="false"
                    tools:ignore="UnusedAttribute">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_black"
                        style="@style/Widget.Doodle.Card"
                        android:layout_marginEnd="4dp">

                        <com.google.android.material.card.MaterialCardView
                            style="@style/Widget.Doodle.Card.Circle"
                            app:cardBackgroundColor="@color/wp_bg_doodle_black" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_white"
                        style="@style/Widget.Doodle.Card"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp">

                        <com.google.android.material.card.MaterialCardView
                            style="@style/Widget.Doodle.Card.Circle"
                            app:cardBackgroundColor="@color/wp_bg_doodle_white"/>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_orange"
                        style="@style/Widget.Doodle.Card"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp">

                        <com.google.android.material.card.MaterialCardView
                            style="@style/Widget.Doodle.Card.Circle"
                            app:cardBackgroundColor="@color/wp_bg_doodle_orange" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_night_mode"
                style="@style/Theme.Doodle.ListItem.TwoLine.Clickable"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/image_night_mode"
                    style="@style/Theme.Doodle.ListItem.Icon"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Doodle.ListItem.TextBox.Stretch">

                    <TextView
                        style="@style/Theme.Doodle.ListItem.Title"
                        android:text="@string/setting_night_mode" />

                    <TextView
                        style="@style/Theme.Doodle.ListItem.Description"
                        android:text="@string/setting_night_mode_description" />

                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_night_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_follow_system"
                style="@style/Theme.Doodle.ListItem.TwoLine.Clickable"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:id="@+id/linear_follow_system_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_follow_system"
                        style="@style/Theme.Doodle.ListItem.Icon"
                        android:src="@drawable/ic_round_brightness_auto_anim"
                        tools:ignore="ContentDescription" />

                    <LinearLayout style="@style/Theme.Doodle.ListItem.TextBox.Stretch">

                        <TextView
                            style="@style/Theme.Doodle.ListItem.Title"
                            android:text="@string/setting_follow_system" />

                        <TextView
                            style="@style/Theme.Doodle.ListItem.Description"
                            android:text="@string/setting_follow_system_description" />

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_follow_system"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"/>

            </LinearLayout>

            <LinearLayout
                style="@style/Theme.Doodle.ListItem.TwoLine"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:minHeight="50dp">

                <ImageView
                    android:id="@+id/image_parallax"
                    style="@style/Theme.Doodle.ListItem.Icon"
                    android:src="@drawable/ic_round_swap_horiz_anim"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Doodle.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Doodle.ListItem.Title"
                        android:text="@string/setting_parallax" />

                    <TextView
                        style="@style/Theme.Doodle.ListItem.Description"
                        android:text="@string/setting_parallax_description" />

                </LinearLayout>

            </LinearLayout>

            <RadioGroup
                android:id="@+id/radio_group_parallax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_none"
                    style="@style/Widget.Doodle.RadioButton"
                    android:text="@string/setting_parallax_none"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_little"
                    style="@style/Widget.Doodle.RadioButton"
                    android:text="@string/setting_parallax_little"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_much"
                    style="@style/Widget.Doodle.RadioButton"
                    android:text="@string/setting_parallax_much" />

            </RadioGroup>

            <LinearLayout
                style="@style/Theme.Doodle.ListItem.TwoLine"
                android:paddingTop="12dp"
                android:paddingBottom="8dp"
                android:minHeight="50dp">

                <ImageView
                    android:id="@+id/image_size"
                    style="@style/Theme.Doodle.ListItem.Icon"
                    android:src="@drawable/ic_round_filter_center_focus_anim"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Doodle.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Doodle.ListItem.Title"
                        android:text="@string/setting_size" />

                    <TextView
                        style="@style/Theme.Doodle.ListItem.Description"
                        android:text="@string/setting_size_description" />

                </LinearLayout>

            </LinearLayout>

            <RadioGroup
                android:id="@+id/radio_group_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_default"
                    style="@style/Widget.Doodle.RadioButton"
                    android:text="@string/setting_size_default"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_big"
                    style="@style/Widget.Doodle.RadioButton"
                    android:text="@string/setting_size_big"/>

            </RadioGroup>

            <TextView
                style="@style/Theme.Doodle.Category"
                android:text="@string/category_info" />

            <LinearLayout
                style="@style/Theme.Doodle.ListItem.TwoLine">

                <ImageView
                    style="@style/Theme.Doodle.ListItem.Icon"
                    android:src="@drawable/ic_round_info_outline"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Doodle.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Doodle.ListItem.Title"
                        android:text="@string/info_version" />

                    <TextView
                        style="@style/Theme.Doodle.ListItem.Description"
                        android:text="@string/versionName" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_developer"
                style="@style/Theme.Doodle.ListItem.TwoLine.Clickable">

                <ImageView
                    android:id="@+id/image_developer"
                    style="@style/Theme.Doodle.ListItem.Icon"
                    android:src="@drawable/ic_round_person_anim"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Doodle.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Doodle.ListItem.Title"
                        android:text="@string/info_developer" />

                    <TextView
                        style="@style/Theme.Doodle.ListItem.Description"
                        android:text="@string/app_developer" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout style="@style/Theme.Doodle.ListItem.TwoLine">

                <ImageView
                    style="@style/Theme.Doodle.ListItem.Icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/ic_round_material_components"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Theme.Doodle.ListItem.Description"
                        android:text="@string/info_material_components_built_with" />

                    <TextView
                        style="@style/Theme.Doodle.ListItem.Title"
                        android:text="@string/info_material_components" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>