<animated-vector
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:aapt="http://schemas.android.com/aapt">
  <aapt:attr name="android:drawable">
    <vector
      android:name="vector"
      android:width="24dp"
      android:height="24dp"
      android:viewportWidth="24"
      android:viewportHeight="24">
      <path
        android:name="circle"
        android:pathData="M 12 2 C 6.48 2 2 6.48 2 12 C 2 17.52 6.48 22 12 22 C 17.52 22 22 17.52 22 12 C 22 6.48 17.52 2 12 2 Z"
        android:fillColor="#fff"
        android:strokeColor="#bdc1c6"
        android:strokeWidth="2" />
      <group
        android:name="group"
        android:pivotX="9"
        android:pivotY="17">
        <path
          android:name="tick"
          android:pathData="M 6.364 11.963 L 10 15.589 L 17.615 7.97"
          android:strokeColor="@color/secondary"
          android:strokeWidth="2"
          android:strokeLineCap="round"
          android:strokeLineJoin="round" />
      </group>
    </vector>
  </aapt:attr>
  <target android:name="group">
    <aapt:attr name="android:animation">
      <set>
        <objectAnimator
          android:propertyName="translateY"
          android:duration="150"
          android:valueFrom="0"
          android:valueTo="2"
          android:valueType="floatType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
        <objectAnimator
          android:propertyName="rotation"
          android:duration="150"
          android:valueFrom="0"
          android:valueTo="10"
          android:valueType="floatType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
        <objectAnimator
          android:propertyName="translateY"
          android:startOffset="150"
          android:duration="75"
          android:valueFrom="2"
          android:valueTo="-1"
          android:valueType="floatType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
        <objectAnimator
          android:propertyName="translateY"
          android:startOffset="225"
          android:duration="75"
          android:valueFrom="-1"
          android:valueTo="0"
          android:valueType="floatType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
        <objectAnimator
          android:propertyName="rotation"
          android:startOffset="150"
          android:duration="75"
          android:valueFrom="10"
          android:valueTo="-7"
          android:valueType="floatType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
        <objectAnimator
          android:propertyName="rotation"
          android:startOffset="225"
          android:duration="75"
          android:valueFrom="-7"
          android:valueTo="0"
          android:valueType="floatType"
          android:interpolator="@android:interpolator/fast_out_slow_in" />
      </set>
    </aapt:attr>
  </target>
</animated-vector>
